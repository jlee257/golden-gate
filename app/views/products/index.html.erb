<div id="main-container" class="container">

<ul class="nav nav-pills" role="tablist">
  <li class="active"><%= link_to 'View list', products_path %></li>
  <li><%= link_to 'New Product', new_product_path %></li>
</ul>



<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <span class="has-tooltip" data-toggle="tooltip" title="<%= "Created on #{product.created_at.strftime("%m/%e/%Y at %w:%M %p")}, Last modified on #{product.updated_at.strftime("%m/%e/%Y at %w:%M %p")}" %>">
            <%= product.title %>
          </span>
        </td>
        <td>
        <% if product.description? %>
          <!-- Button trigger modal -->
          <button class="btn btn-link" data-toggle="modal" data-target="#product-<%= product.id %>-description">
            View Description
          </button>

          <!-- Modal -->
          <div class="modal fade" id="product-<%= product.id %>-description" tabindex="-1" role="dialog" aria-labelledby="product-<%= product.id %>-label" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h4 class="modal-title" id="product-<%= product.id %>-label">Description</h4>
                </div>
                <div class="modal-body">
                  <%= product.description %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        </td>

        <td><%= product.price %></td>
        <td><%= link_to 'Show', product, class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_product_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Product
<% end %>
</div>
